<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-5">
    <h2> <%= image_tag(@user.avatar.thumb.url, class:"rounded-circle") if @user.avatar? %> <%= @user.name %>'s profile </h2>
  </div>
  <div class="col-md-3">
  </div>
  <div class="col-md-3 edit_button">
    <% if @user == current_user %>
      <h4> <%= link_to "Edit Profile", edit_user_path(@user) %> </h4>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-1">
  </div>
  <% @user.posts.each.with_index do |x, y| %>
    <% if y > 0 && (y + 1) % 3 == 0 %>
    </div>
    <div class="row">
      <div class="col-md-1">
      </div>
    <% end %>
    <div class="col-md-3 text-center posts_box">
      <p><%= link_to (image_tag(x.story.thumb.url, class: 'rounded pic_fix')), user_post_path(@user, x.id) %></p>
      <p><%= x.title %></p>
    </div>
  <% end %>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>