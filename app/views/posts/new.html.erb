<h1>New Post</h1>
<%= form_for @post, html: { multipart: true } do |post| %>
  <%= post.label "Select Image", class: "select-image-label" %>
  <%= post.file_field :images, multiple: true, onchange: "previewImage(event)", id: "new-image" %>
  <%= post.text_field :caption, placeholder: "Enter caption", id: "post-caption" %>
  <%= post.number_field :price, placeholder: "Place a price.."%>
  <%= post.submit "Post Image", class: "new-post-submit-button" %>
<% end %>
<%= link_to 'Back', posts_path %>